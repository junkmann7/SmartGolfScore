<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="1" >

    <include
        layout="@layout/score_viewer_separator_vertical" />

    <TextView
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|center"
        android:paddingTop="1dp"
        android:text="@string/score_viewer_total"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/adjusted_text_size_14dp" />

    <include
        layout="@layout/score_viewer_separator_vertical" />

    <TextView
        android:id="@+id/total_par_score"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|center"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/adjusted_text_size_16dp"
        android:tag="score_text" />

    <include
        layout="@layout/score_viewer_separator_vertical" />

    <include
        android:id="@+id/per1total"
        layout="@layout/score_viewer_each_player_total" />

    <include
        layout="@layout/score_viewer_separator_vertical" />

    <include
        android:id="@+id/per2total"
        layout="@layout/score_viewer_each_player_total" />

    <include
        layout="@layout/score_viewer_separator_vertical" />

    <include
        android:id="@+id/per3total"
        layout="@layout/score_viewer_each_player_total" />

    <include
        layout="@layout/score_viewer_separator_vertical" />

    <include
        android:id="@+id/per4total"
        layout="@layout/score_viewer_each_player_total" />

    <include
        layout="@layout/score_viewer_separator_vertical" />
</LinearLayout>