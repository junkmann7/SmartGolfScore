<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_area"
    android:layout_width="match_parent"
    android:layout_height="@dimen/adjusted_size_80dp"
    android:layout_marginBottom="-20dp"
    tools:ignore="SpUsage" >

    <RelativeLayout
        android:id="@+id/toolbar_top_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adjusted_size_60dp"
        android:background="@drawable/title_back" >

        <ImageButton
            android:id="@+id/toolbar_back_btn"
            android:layout_width="@dimen/adjusted_size_60dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/adjusted_size_10dp"
            android:layout_marginBottom="@dimen/adjusted_size_5dp"
            android:src="@drawable/image_button_back"
            android:contentDescription="@string/etc_content_description"
            android:layout_alignParentLeft="true"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/toolbar_menu_btn"
            android:layout_width="@dimen/adjusted_size_60dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/adjusted_size_10dp"
            android:layout_marginBottom="@dimen/adjusted_size_5dp"
            android:src="@drawable/image_button_setting"
            android:contentDescription="@string/etc_content_description"
            android:layout_alignParentRight="true"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/toolbar_back_btn"
            android:layout_toLeftOf="@id/toolbar_menu_btn"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#FFF"
            android:textSize="@dimen/adjusted_size_20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/toolbar_top_area"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/shadow_top_20"
        android:layout_alignParentBottom="true" />

</RelativeLayout>